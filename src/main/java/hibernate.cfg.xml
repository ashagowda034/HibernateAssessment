<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC    
          "-//Hibernate/Hibernate Configuration DTD 5.3//EN"    
          "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">    
          <hibernate-configuration>    
    
    <session-factory>    
        <property name="hibernate.hbm2ddl.auto">create</property>    
        <property name="hibernate.dialect">org.hibernate.dialect.MYSQL5Dialect</property>    
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mysql_database</property>    
        <property name="hibernate.connection.username">root</property>    
        <property name="hibernate.connection.password">sql#@9080</property>  
        <property name="show_sql">true</property>  
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>    
     <mapping class="com.org.gen.hib.Answer"></mapping>
     <mapping class="com.org.gen.hib.Question"></mapping>   
    </session-factory>    
    
</hibernate-configuration> 